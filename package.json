{
  "name": "tasks-api",
  "scripts": {
    "test": "jest",
    "build": "npx tsc --build",
    "start:local": "npm run start:local:db -- -d && npm run start:local:api",
    "start:local:api": "sls offline start",
    "start:local:db": "docker-compose up"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@types/jest": "^27.4.1",
    "@types/supertest": "^2.0.11",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "serverless-offline": "^8.5.0",
    "serverless-plugin-optimize": "^4.2.1-rc.1",
    "serverless-plugin-typescript-express": "^1.0.8",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "body-parser": "^1.18.3",
    "dotenv": "^16.0.0",
    "express": "^4.16.4",
    "express-namespace": "^0.1.1",
    "knex": "^1.0.3",
    "pg-promise": "^10.11.1",
    "serverless-http": "^1.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
